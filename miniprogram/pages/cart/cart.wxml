<view class="main">

    <view class='order-area' wx:if="{{orderList}}">
        <checkbox-group class="cart-box" bindchange="onSelect">
            <view class="cart-item" wx:for="{{orderList}}" wx:key="{{index}}">
                <view class='operation-box'>
                    <checkbox color="#ecf0f1" value='{{item.total}}' checked='{{selected}}'></checkbox>
                    <view class='delete' bindtap='onDelete' data-id="{{item._id}}">X</view>
                </view>
                <image class="room-img" src="{{item.roomImg}}" mode='widthFix'></image>
                <view class='order-info'>
                    <text>[{{item.quantity}}]间 </text><text class="room-type"> {{item.roomType}}</text>
                    <view class='date'>{{item.checkInDate}} 至 {{item.checkOutDate}}</view>
                    <view>宿 [{{item.stay}}]晚</view>
                    <view>总价 <text class='price'>RMB {{item.total}}</text></view>
                    <scroll-view scroll-x style="white-space: nowrap; background: #fff;"><view class='for-who'>{{item.forWho}}</view></scroll-view>
                </view>
            </view>
        </checkbox-group>

        <view class="cart-footer">
            <!-- <icon wx:if="{{selectAllStatus}}" type="success_circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <icon wx:else type="circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <view class="order-icon">
                <view bindtap="saveOder" ><image src="/lib/images/icon3.png"></image></view>
            </view> -->
            <checkbox-group bindchange="onSelectAll">
                <checkbox value='all' checked='{{allSelected}}'>全选</checkbox>
            </checkbox-group>
            <view style='font-size: 36rpx'>需支付  <text class="price">￥{{orderTotal}}</text></view>
            <view>—></view>
        </view>
    </view>


    <view wx:else>
        <view class="cart-no-data">购物车是空的哦~</view>
    </view>
</view>